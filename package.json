{
  "name": "@lorenzofratus/anki-overdrive-api",
  "version": "1.0.3-1",
  "description": "API for Anki Overdrive developer interface",
  "author": "Lorenzo Fratus <lorenzo.fratus.dev@gmail.com>",
  "license": "MIT",
  "main": "./lib/index.js",
  "typings": "./lib/index.d.ts",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "tsc -p test && mocha test/unit/**/*.spec.js --require test/index.js --exit",
    "test:e2e": "tsc -p . && mocha test/e2e/**/*spec.js",
    "test:coverage": "nyc npm t",
    "docs": "typedoc --out docs src --mode file && node post-process-docs",
    "build": "tsc"
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/mocha": "^5.2.5",
    "@types/node": "^10.12.2",
    "@types/sinon": "^5.0.5",
    "@types/sinon-chai": "^3.2.0",
    "chai": "^4.2.0",
    "create-file": "^1.0.1",
    "mocha": "^5.2.0",
    "nyc": "^13.1.0",
    "sinon": "^7.1.1",
    "sinon-chai": "^3.2.0",
    "source-map-support": "^0.5.9",
    "testdouble": "^3.8.2",
    "ts-node": "^7.0.1",
    "tslint": "^5.11.0",
    "typescript": "^3.1.6"
  },
  "dependencies": {
    "@abandonware/noble": "^1.9.2-23",
    "@types/websocket": "^0.0.40",
    "@types/ws": "^6.0.1",
    "websocket": "^1.0.28"
  },
  "nyc": {
    "exclude": [
      "node_modules/**",
      "test/**"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "require": [
      "ts-node/register"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
